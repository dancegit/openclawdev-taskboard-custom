services:
  taskboard:
    build: .
    container_name: signalmatrix-taskboard
    restart: unless-stopped
    ports:
      - "127.0.0.1:18080:8080"  # Bind to localhost only for security
    volumes:
      - ./data:/app/data
      - ./static:/app/static
    env_file:
      - .env
    environment:
      - PYTHONUNBUFFERED=1
    extra_hosts:
      - "host.docker.internal:host-gateway"
